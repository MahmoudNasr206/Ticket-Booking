<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tickets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tickets.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark Top-header">
            <div class="container-fluid">
                <div class="collapse navbar-collapse  justify-content-around" id="navbarSupportedContent">
                    <a class="navbar-brand mt-2 mt-lg-0" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/Images/ticketing-system.png" alt="MDB Logo" style="height:35px;" loading="lazy" />
                    </a>
                    <ul class="navbar-nav  mb-2 ms-lg-4 mb-lg-0">
                        <li class="nav-item mx-lg-3">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-lg-3">
                            <a class="nav-link fw-bold text-white" asp-action="ContactUs" asp-controller="Home">Contact Us</a>
                        </li>
                        <li class="nav-item mx-lg-3">
                            <a class="nav-link fw-bold text-white" asp-action="About" asp-controller="Home">About</a>
                        </li>
                        <li class="nav-item mx-lg-3">
                            <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                            <li class="nav-item mx-lg-3">
                                <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Event" asp-action="Index">Dashboard</a>
                            </li>
                        }

                    </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex align-items-center">
                            <div class="dropdown">
                                <div class="dropdown-toggle d-flex align-items-center hidden-arrow" id="navbarDropdownMenuAvatar" role="button" aria-expanded="false">
                                    <img src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp" class="rounded-circle" height="25" alt="User Avatar" loading="lazy" />
                                    <a class="mx-3 text-white d-inline fw-bold" asp-area="" asp-controller="Event" asp-action="Index">@User.Identity.Name</a>
                                    <a class="dropdown-item fw-bold text-white d-inline ms-3" asp-controller="Account" asp-action="Logout">Log Out</a>

                                </div>


                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <a asp-controller="Account" asp-action="Login" class="text-white me-2">Login</a>
                            <a asp-controller="Account" asp-action="Register" class="text-white">Register</a>
                        </div>
                    }
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer" style="position:relative">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-4 mb-md-0 sponsor">
                    <h3>Sponsors</h3>
                    <div class="images">
                        <img src="~/Images/Dashboard/image1.jpg" alt="Sponsor 1">
                        <img src="~/Images/Dashboard/image2.jpg" alt="Sponsor 2">
                        <img src="~/Images/Dashboard/image3.jpg" alt="Sponsor 3">
                    </div>
                </div>
                <div class="col-md-6 text-center text-md-start tickets">
                    <h4>12 Feb 2020</h4>
                    <h3>Green Avenue, New York</h3>
                    <p>The event regularly attracts a diverse range of attendees from around the world.</p>
                    <a href="#" class="btn btn-primary btn-custom">Buy Tickets</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
