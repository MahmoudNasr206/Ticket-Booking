@model ResetPasswordViewModel

@{
    Layout = "_AccountLayout";
    if (Model != null)
    {
        Model.Email = Context.Request.Query["email"];
        Model.Token = Context.Request.Query["token"];
    }
}

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <!-- Signin Image -->
            <div class="signin-image">
                <figure>
                    <img src="~/Images/Account/ForgotPassword.png" alt="Reset password image" />
                </figure>
                <a href="@Url.Action("Register", "Account")" class="signup-image-link">Create an account</a>
            </div>

            <!-- Reset Password Form -->
            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>
                <form method="POST" asp-action="ResetPassword" id="resetpassword-form">
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Token" />

                    <div class="form-group">
                        <label for="password"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="New Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="confirm_password"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirm_password" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="reset_password" id="reset_password" class="form-submit" value="Reset Password" />
                    </div>
                </form>

                <!-- Additional Links -->
                <div class="mt-2">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Login</a>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-secondary ms-2">Register</a>
                </div>
            </div>
        </div>
    </div>
</section>
